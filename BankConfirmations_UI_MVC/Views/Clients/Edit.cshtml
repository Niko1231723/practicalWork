@model BankConfirmations_DTO.Client

<h1>Edit Client</h1>
<div class="row">
    <div class="col-md-4">
        <img style="display:inline-block"; width="216" height="417" src="https://www.addiko.rs/static/uploads/Addiko-Office-hrcak-Oskar-rgb-merge-e1650631123885.png"/>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNumber" class="control-label"></label>
                <input asp-for="IdNumber" class="form-control" />
                <span asp-validation-for="IdNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientDetails.City" class="control-label"></label>
                <input asp-for="ClientDetails.City" class="form-control" ></>
                <span asp-validation-for="ClientDetails.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientDetails.Address" class="control-label"></label>
                <input asp-for="ClientDetails.Address" class="form-control" ></>
                <span asp-validation-for="ClientDetails.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClientDetails.Date" class="control-label"></label>
                <input asp-for="ClientDetails.Date" class="form-control" ></>
                <span asp-validation-for="ClientDetails.Date" class="text-danger"></span>
            </div>
            <div class="form-group-input">
                <br />
                <br />
                <input type="submit" value="Save" class="btn btn-primary" />
                <a style="color:white" class="btn btn-success" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
